@model FilmsCatalog.Models.Film

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить?</h3>
<div>
    
    <hr />
    <dl class="row">        
        <dt class = "col-sm-2">
            Название
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>        
        <dt class = "col-sm-2">
            Год
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseYear)
        </dd>
        <dt class = "col-sm-2">
            Режиссёр
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Producer)
        </dd>
    </dl>
    
    <form asp-action="Delete">        
        <input type="submit" name="Delete" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к фильму</a>
    </form>
</div>
